#include <iostream>
#include<math.h>
using namespace std;

int main() {
	int n;
	cin>>n;
	int i=0;
	int ans=0;
	while(n!=0){
	    int digit = n%10;// get digit  
	    if(digit==1){ //check if its one
	        ans=ans+pow(2,i);// the add to 2^i ie 2^0+0=2 then likewise for 2^2 =4 and add both =6
	        
	    }
	        n=n/10;
	        i++;
	    }
	    cout<<ans<<endl;
	    
	}
